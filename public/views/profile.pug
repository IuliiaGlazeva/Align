html
	head
		title My Profile
		link(rel="stylesheet" href="../css/style.css")
	body
		header
			nav
				div
					a(href= "/logout") Logout
				div
					a(href= "/") Home
				div
					a(href= "/profile") Profile
				div
					a(href= '/event') My Events
				div
					a(href='/event') Event Calender
				div
					a(href='/about') About
				div
					a(href='/contact') Contact Us

		main
			h1 #{user.firstname}'s Profile		
			h2 Welcome to your profile #{user.firstname}!
			h3
				a(href='/event') Click here to view all events!
			h3
				a(href='/myevents') Click to view all the events you posted!
			h3 Upload or change your profile picture!
				form(method="post" action="/picture")
					input(type='file' name="picture" accept="image/*")
					br
					input(type='submit' value="Load up your image")
			img(id="profilepicture" src='')
		script.
			document.getElementById("profilepicture").src = picture
			console.log(picture)
